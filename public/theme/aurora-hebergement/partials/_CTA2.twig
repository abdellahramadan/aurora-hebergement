{% setcontent settings = 'settings' %}
{% setcontent cta = 'others' %}

<!--call to action start-->
{% if cta is not empty %}
<section class="ptb-60 primary-bg">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-12 col-lg-6">
                <div class="cta-content-wrap text-white">
                    <h2 class="text-white">{{ cta.cta2_title }}</h2>
                    <p>{{ cta.cta2_body|raw }}</p>
                </div>
                <div class="support-action d-inline-flex flex-wrap">
                    <a href="mailto:support@yourdomain.com" class="mr-3"><i class="fas fa-comment mr-1 color-accent"></i> <span>{{ settings.email ? settings.email : '' }}</span></a>
                    <a href="tel:{{ settings.phone ? settings.phone : '' }}" class="mb-0"><i class="fas fa-phone-alt mr-1 color-accent"></i> <span>{{ settings.phone ? settings.phone : '' }}</span></a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4 d-none d-lg-block">
                <div class="cta-img-wrap text-center">
                    <img src="{{ cta.image ? cta.image : '' }}" width="250" class="img-fluid" alt="server room">
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}
<!--call to action end-->
