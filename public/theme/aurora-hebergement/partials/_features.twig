{% setcontent others = 'others' %}
{% setcontent features = 'features' %}
<!--feature section start-->
<section class="feature-section ptb-100 ">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-8">
                <div class="section-heading text-center">
                    <h2>{{ others.hostings_title ?? '' }}</h2>
                    <p class="lead">{{ others.hostings_desc|raw }}</p>
                </div>
            </div>
        </div>
        {% if features is not empty %}
            <div class="row">
                {% for feature in features %}
                    <div class="col-md-6 col-lg-4 mt-4">
                        <div class="features-box p-5 ">
                            <div class="features-box-icon mb-3">
                                <span class="{{ feature.icon }} icon-size-md color-primary"></span>
                            </div>
                            <div class="features-box-content">
                                <h5>{{ feature.title ?? '' }}</h5>
                                <p>{{ feature.icon ?? '' }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
<!--feature section end-->
